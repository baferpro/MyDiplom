<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2">
    <Style x:Key="ForLabel"
           TargetType="{x:Type Label}">
        <Setter Property="HorizontalContentAlignment" 
                Value="Center"/>
        <Setter Property="VerticalContentAlignment" 
                Value="Center"/>
        <Setter Property="FontFamily" 
                Value="Roboto"/>
        <Setter Property="Foreground" 
                Value="#071351"/>
        <Setter Property="FontSize" 
                Value="24"/>
        <Setter Property="Padding"
                Value="0"/>
        <Setter Property="HorizontalAlignment"
                Value="Center"/>
        <Setter Property="VerticalAlignment"
                Value="Center"/>
    </Style>
    <Style x:Key="ForTextBlock"
           TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" 
                Value="Roboto"/>
        <Setter Property="Foreground" 
                Value="#071351"/>
        <Setter Property="FontSize" 
                Value="24"/>
        <Setter Property="Padding"
                Value="0"/>
        <Setter Property="HorizontalAlignment"
                Value="Center"/>
        <Setter Property="VerticalAlignment"
                Value="Center"/>
    </Style>
    <Style x:Key="ForButtons"
           TargetType="{x:Type Button}">
        <Setter Property="VerticalAlignment"
                Value="Center"/>
        <Setter Property="HorizontalAlignment"
                Value="Center"/>
        <Setter Property="HorizontalContentAlignment" 
                Value="Center"/>
        <Setter Property="VerticalContentAlignment" 
                Value="Center"/>
        <Setter Property="FontFamily" 
                Value="Roboto"/>
        <Setter Property="Foreground" 
                Value="#071351"/>
        <Setter Property="FontSize" 
                Value="24"/>
        <Setter Property="Padding"
                Value="20,15"/>
        <Setter Property="BorderThickness"
                Value="2"/>
        <Setter Property="BorderBrush"
                Value="#071351"/>
        <Setter Property="Background"
                Value="#FFFFFF"/>
    </Style>
    <Style x:Key="ForTextBox"
           TargetType="{x:Type TextBox}">
        <Setter Property="HorizontalContentAlignment" 
                Value="Left"/>
        <Setter Property="VerticalContentAlignment" 
                Value="Center"/>
        <Setter Property="FontFamily" 
                Value="Roboto"/>
        <Setter Property="Foreground" 
                Value="#071351"/>
        <Setter Property="FontSize" 
                Value="18"/>
    </Style>
    <Style x:Key="ForPasswordBox"
           TargetType="{x:Type PasswordBox}">
        <Setter Property="HorizontalContentAlignment" 
                Value="Left"/>
        <Setter Property="VerticalContentAlignment" 
                Value="Center"/>
        <Setter Property="FontFamily" 
                Value="Roboto"/>
        <Setter Property="Foreground" 
                Value="#071351"/>
        <Setter Property="FontSize" 
                Value="24"/>
        <Setter Property="PasswordChar"
                Value="*"/>
    </Style>
    <Style x:Key="ForComboBox"
           TargetType="{x:Type ComboBox}">
        <Setter Property="HorizontalContentAlignment" 
                Value="Left"/>
        <Setter Property="VerticalContentAlignment" 
                Value="Center"/>
        <Setter Property="FontFamily" 
                Value="Roboto"/>
        <Setter Property="Foreground" 
                Value="#071351"/>
        <Setter Property="FontSize" 
                Value="24"/>
        <Setter Property="Background"
                Value="#FFFFFF"/>
    </Style>
    <Style x:Key="ForDatePickerTextBox"
           TargetType="{x:Type DatePickerTextBox}">
        <Setter Property="HorizontalContentAlignment" 
                Value="Left"/>
        <Setter Property="VerticalContentAlignment" 
                Value="Center"/>
        <Setter Property="FontFamily" 
                Value="Roboto"/>
        <Setter Property="Foreground" 
                Value="#071351"/>
        <Setter Property="FontSize" 
                Value="24"/>
    </Style>
